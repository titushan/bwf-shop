<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bwf.shop.product.mapper.CategoryMapper">

    <select id="getCategoryListByParentId" resultType="com.bwf.shop.product.bean.po.Category">
        select *
            from `category`
            where
                <choose>
                    <when test="parent_id == null">
                        parent_id is null
                    </when>
                    <otherwise>
                        parent_id = #{parent_id}
                    </otherwise>
                </choose>
    </select>

</mapper>